{
  "name": "xlynxai-server",
  "version": "1.0.0",
  "description": "REST API for time.me - Tasks CRUD application",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
   "dev": "nodemon -L -r tsconfig-paths/register index.ts --watch \"**/*.{ts,js}\" --ignore \"node_modules\" --ignore \"build\"",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "type-check": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./drizzle.config.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register scripts/migrate.ts",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down postgres",
    "db:test:up": "docker-compose --profile test up -d db_test",
    "db:test:down": "docker-compose --profile test down db_test",
    "db:setup": "pnpm db:up && timeout /t 5 /nobreak >nul && pnpm db:push",
    "docker:down": "docker-compose down",
    "docker:shell": "docker exec -it backend sh || true",
    "docker:build": "docker build . -t backend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.6.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.5",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "better-sqlite3": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}